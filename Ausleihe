package bibliothekAnwendung.BiblioAnwendung.entity;


import lombok.AllArgsConstructor;
import lombok.Getter;
import lombok.NoArgsConstructor;
import lombok.Setter;

import javax.persistence.*;
import java.util.Date;


@Entity
@Table(name = "ausleihe")
@NoArgsConstructor
@AllArgsConstructor
@Getter
@Setter


public class Ausleihe {


    long id;


    @Id
    @GeneratedValue
    @Column(name = "id", unique = true, nullable = false)
    public long getId() {
        return id;
    }


    public void setId(long id) {
        this.id = id;
    }



    @Column
    private Date ausleiheDatum;

    @Column
    private Date  abgabeDatum;

    @Column
    private int buchGenre;

    @Column
    private int personId;

//    @ManyToOne (fetch = FetchType.LAZY,targetEntity = Buch.class, optional = false)
//    @JoinColumn(name = "buch_id", nullable = false)
////    @JoinColumn(referencedColumnName = "buch", table = "ausleihe")
//    private Buch buch;

    @ManyToOne (fetch = FetchType.LAZY)
    @JoinColumn(name="buch_fk")
    private Buch buch;
